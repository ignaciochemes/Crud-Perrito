<body>
    <main>
        <div class="container-fluid" id="cont-index">
            <div class="row">
                <div class="col">
                    <div class="container-fluid p-4">
                        <div class="row">
                            {{#each articulo}}
                            <div class="col-md-2">
                                <div class="card text-center">
                                    <div class="card-body" id="card-precios-fotos">
                                        <div class="form-group">
                                            <center>
                                                <h3>
                                                    {{categoria}}
                                                </h3>
                                            </center>
                                        </div>
                                        <div class="form-group" id="card-precios-fotos-dentro">
                                            <img src="{{img}}" class="img-fluid" height="150px" width="150px">
                                        </div>
                                        <div class="form-group">
                                            <center>
                                                <h2>{{nombre}}
                                                    <br>
                                                    ${{precioventa}}
                                                </h2>
                                            </center>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>